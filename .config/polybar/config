
;-------------------------------------------------------------------------------;
;  V A R I A B L E S								;
;-------------------------------------------------------------------------------;
[colors]
; colour names refer to the Xresources value
; find out what the colours are with: msgcat --color=test
black = ${xrdb:color0}
blue = ${xrdb:color4}
green = ${xrdb:color2}
cyan = ${xrdb:color6}
red = ${xrdb:color1}
magenta = ${xrdb:color5}
yellow = ${xrdb:color3}
white = ${xrdb:color7}
default = ${xrdb:color8}

; usually a sane way to pick contrasting colours
background = ${xrdb:color0}
foreground = ${xrdb:color7}

true_white = #fff
true_red = #f00
true_black = #000
;-------------------------------------------------------------------------------;
;  B A R S									;
;-------------------------------------------------------------------------------;
[bar/bar1]
width = 100%
height = 30
fixed-center = true
bottom = false 

border-bottom-size = 0
border-top-size = 0

border-left-size = 0
border-right-size = 0

background = ${colors.background}
foreground = ${colors.foreground}

; online character map or install gucharmap
; http://bluejamesbond.github.io/CharacterMap/

font-0 = "Glacial Indifference:style=Regular:pixelsize=15;3"
font-1 = Anonymice Nerd Font:style=Regular:pixelsize=18;3

modules-left = i3

modules-center = title

# modules-right = arrowvolume volume arrowcpu cpu arrowmemory memory arrowdate date arrowdate2
modules-right = separator volume separator cpu separator memory serarator temperature separator date separator
; arrowevent event

tray-position = right
tray-background = ${colors.background}
tray-padding = 1

