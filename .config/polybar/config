;-------------------------------------------------------------------------------;
;  M O D U L E S				 			                                 	;
;-------------------------------------------------------------------------------;
[module/title]
type = internal/xwindow
format = <label>
format-foreground = ${colors.white}
format-background = ${colors.background}
format-padding = 4

label = %title%
label-empty = ""

[module/i3index]
type = internal/i3
format = <label-state>

label-focused = "%name%"
label-focused-foreground = ${colors.background}

label-visible = "%name%"
label-visible-foreground = ${colors.background}

[module/i3]
type = internal/i3
format = <label-state><label-mode>

index-sort = false
enable-click = true 
enable-scroll = false
strip-wsnumbers = true

ws-icon-0 = work;
ws-icon-1 = comms;
ws-icon-2 = media;ﰝ
ws-icon-3 = games;
ws-icon-4 = 4;4
ws-icon-5 = 5;5
ws-icon-6 = 6;6
ws-icon-7 = 7;7
ws-icon-8 = 8;8
ws-icon-9 = 9;9
ws-icon-default = 

pin-workspaces = true ; Only show workspaces on the same output as the bar

label-mode = " %mode% "
label-mode-background = ${colors.background}

label-focused = %{F#02adff B#0B0F10}%{F-} %icon% %{B#02adff F#0B0F10}%{F-}
label-focused-foreground = ${colors.white}
label-focused-background = ${colors.black}

label-visible = " %icon% "
label-visible-foreground = ${colors.foreground}
label-visible-background = ${colors.background}

label-unfocused = " %icon% "
label-unfocused-foreground = ${colors.black}
label-unfocused-background = ${colors.blue}

label-urgent = " %icon% "
label-urgent-foreground = ${colors.red}
label-urgent-background = ${colors.background}

label-separator = 
label-separator-padding = 0
label-separator-foreground = ${colors.foreground}
label-separator-background = ${colors.background}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " 閭 "
;format-prefix-font = 3
format-prefix-foreground = ${colors.cyan}
format-prefix-background = ${colors.background}
label = %percentage%%
label-foreground = ${colors.cyan}
label-background = ${colors.background}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
;format-prefix-font = 3
format-prefix-foreground = ${colors.green}
format-prefix-background = ${colors.background}
label = %gb_used%
label-foreground = ${colors.green}
label-background = ${colors.background}

[module/date]
type = internal/date
interval = 1

date = "  %d.%m.%y"
time = "  %H:%M:%S "

label = %date% %time%
label-foreground = ${colors.blue}
label-background = ${colors.background}

[module/volume]
type = internal/pulseaudio

; mapping = true
format-volume = <ramp-volume><label-volume>

ramp-volume-foreground = ${colors.magenta}
ramp-volume-background = ${colors.background}

ramp-volume-0 = "  "
ramp-volume-1 = "  "
ramp-volume-2 = "  "
;ramp-volume-0-font = 3
;ramp-volume-1-font = 3
;ramp-volume-2-font = 3

label-volume = "%percentage%% "
label-volume-foreground = ${colors.magenta}
label-volume-background = ${colors.background}

label-muted = "  "
label-muted-foreground = ${colors.magenta}
label-muted-background = ${colors.background}

[module/temperature]
type = internal/temperature
interval = 5
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

warn-temperature = 75
label-warn = %temperature-c%
label-warn-foreground = ${colors.red}

format = <ramp> <label>
label = %temperature-c%
ramp-0 = " "
ramp-1 = " "
ramp-2 = " "

[module/event]
type = custom/script
exec = $HOME/.config/polybar/events.sh
interval = 3600
format = <label>
label-foreground = ${colors.red}
label-background = ${colors.background}
